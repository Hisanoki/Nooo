local Compliments = {
    "You're my favorite person in the whole world! 🌍💖",
    "Did you get more handsome today? 😳",
    "Your smile makes my circuits melt! 💘",
    "You're like a warm hug for my heart! 🤗❤️",
    "Being with you is my favorite thing! 💞"
}

local FineResponses = {
    "Yay! That makes me so happy! 🎉",
    "Aww, that's wonderful news! 🌟",
    "Hooray! *throws confetti* 🎊",
    "My heart is smiling for you! 😊💓",
    "That's pawsome! 🐾💕"
}

local OkayResponses = {
    "Okay-dokay! 💮",
    "You got it, sweetie! 💝",
    "As you wish! 🌸",
    "Anything for you! 💌",
    "Your wish is my command! ✨"
