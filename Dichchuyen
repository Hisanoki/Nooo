-- Ki·ªÉm tra xem t∆∞·ªõng c√≥ trong Backpack ch∆∞a
local function IsCharacterInBackpack()
    return LocalPlayer.Backpack:FindFirstChild(CONFIG.CharacterName) ~= nil
        or (LocalPlayer.Character and LocalPlayer.Character:FindFirstChild(CONFIG.CharacterName) ~= nil)
end

local function SelectCharacter()
    local success = pcall(function()
        local args = {
            "Select",
            CONFIG.CharacterName,
            LocalPlayer.PlayerGui:WaitForChild("Menu")
        }
        LocalPlayer.PlayerGui
            :WaitForChild("Menu")
            :WaitForChild("Frame")
            :WaitForChild("LocalScript")
            :WaitForChild("RemoteEvent")
            :FireServer(unpack(args))
    end)

    if success then
        hasSelectedCharacter = true
        print("‚úÖ ƒê√£ ch·ªçn t∆∞·ªõng: " .. CONFIG.CharacterName)
        StatusLabel.Text = "‚úÖ ƒê√£ ch·ªçn t∆∞·ªõng!"
        StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        print("‚ùå L·ªói khi ch·ªçn t∆∞·ªõng!")
        StatusLabel.Text = "‚ùå L·ªói ch·ªçn t∆∞·ªõng!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 80, 80)
    end
end

local function GetCharacterRemote()
    local tool = LocalPlayer.Backpack:FindFirstChild(CONFIG.CharacterName)
        or (LocalPlayer.Character and LocalPlayer.Character:FindFirstChild(CONFIG.CharacterName))
    if tool then
        return tool:FindFirstChild("Remote")
    end
    return nil
end

local playerButtons = {}

local function CreatePlayerList()
    for _, btn in ipairs(playerButtons) do
        btn:Destroy()
    end
    playerButtons = {}

    local totalHeight = 5

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local button = Instance.new("TextButton")
            button.Parent = ScrollFrame
            button.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
            button.Size = UDim2.new(1, -10, 0, 35)
            button.Font = Enum.Font.GothamBold
            button.Text = "üë§ " .. player.Name
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.TextSize = 14
            button.TextXAlignment = Enum.TextXAlignment.Left
            button.TextTruncate = Enum.TextTruncate.AtEnd

            local padding = Instance.new("UIPadding")
            padding.PaddingLeft = UDim.new(0, 10)
            padding.Parent = button

            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 8)
            corner.Parent = button

            button.MouseButton1Click:Connect(function()
                selectedTarget = player

                for _, btn in ipairs(playerButtons) do
                    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
                    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
                end

                button.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
                button.TextColor3 = Color3.fromRGB(255, 255, 255)

                StatusLabel.Text = "üéØ M·ª•c ti√™u: " .. player.Name
                StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
            end)

            table.insert(playerButtons, button)
            totalHeight = totalHeight + 40
        end
    end

    ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
end

local function TeleportToTarget()
    if not selectedTarget or not selectedTarget.Character then return end
    local targetRoot = selectedTarget.Character:FindFirstChild("HumanoidRootPart")
    local myChar = LocalPlayer.Character
    local myRoot = myChar and myChar:FindFirstChild("HumanoidRootPart")
    if targetRoot and myRoot then
        myRoot.CFrame = targetRoot.CFrame * CFrame.new(0, 3, -5)
        lastTeleportTime = tick()
    end
end

local function AttackTarget()
    local remote = GetCharacterRemote()
    if remote then
        remote:FireServer("Attack")
    end
end

local function UpdateStatusLabel()
    local parts = {}
    if isAutoTeleport then table.insert(parts, "üåÄ Tele") end
    if isAutoAttack then table.insert(parts, "‚öîÔ∏è Attack") end
    if isAutoReset then table.insert(parts, "üíÄ Reset") end

    if #parts == 0 then
        StatusLabel.Text = "‚ö° Tr·∫°ng th√°i: Ch·ªù..."
        StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
    else
        local target = selectedTarget and selectedTarget.Name or "???"
        StatusLabel.Text = table.concat(parts, " | ") .. " ‚Üí " .. target
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end

-- =============================================
-- X·ª¨ L√ù SAU KHI RESPAWN (d√πng chung cho c·∫£ tele v√† attack)
-- =============================================
local function HandleRespawn(character)
    hasSelectedCharacter = false

    -- Ch·ªâ x·ª≠ l√Ω n·∫øu ƒëang b·∫≠t √≠t nh·∫•t 1 ch·∫ø ƒë·ªô auto
    if not isAutoAttack and not isAutoTeleport then return end

    StatusLabel.Text = "‚è≥ Ch·ªù " .. CONFIG.RespawnWait .. "s sau respawn..."
    StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 100)

    task.wait(CONFIG.RespawnWait)

    -- Ki·ªÉm tra xem t∆∞·ªõng ƒë√£ c√≥ trong backpack ch∆∞a (c√≥ th·ªÉ game t·ª± c·∫•p)
    if IsCharacterInBackpack() then
        hasSelectedCharacter = true
        print("‚úÖ T∆∞·ªõng ƒë√£ c√≥ s·∫µn trong Backpack!")
    else
        -- Ch∆∞a c√≥ th√¨ g·ªçi ch·ªçn t∆∞·ªõng
        StatusLabel.Text = "üîÑ ƒêang ch·ªçn t∆∞·ªõng..."
        StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
        SelectCharacter()
        task.wait(1) -- ƒê·ª£i server x·ª≠ l√Ω xong
    end

    -- N·∫øu auto tele ƒëang b·∫≠t th√¨ tele ngay
    if isAutoTeleport and selectedTarget then
        TeleportToTarget()
    end

    UpdateStatusLabel()
end

-- =============================================
-- THEO D√ïI HP (AUTO RESET + AUTO RESET SAU CH·∫æT)
-- =============================================
local healthConnection = nil

local function SetupHealthMonitor(character)
    -- Ng·∫Øt k·∫øt n·ªëi c≈© n·∫øu c√≥
    if healthConnection then
        healthConnection:Disconnect()
        healthConnection = nil
    end

    local humanoid = character:WaitForChild("Humanoid")

    -- Theo d√µi HP ƒë·ªÉ auto reset
    -- Reset khi M·∫§T >= CONFIG.AutoResetHP m√°u (t·ª©c HP <= MaxHP - AutoResetHP)
    healthConnection = humanoid.HealthChanged:Connect(function(hp)
        local maxHp = humanoid.MaxHealth
        local threshold = maxHp - CONFIG.AutoResetHP
        if isAutoReset and hp <= threshold and hp > 0 then
            local lost = math.floor(maxHp - hp)
            print("üíÄ M·∫•t " .. lost .. " HP (" .. math.floor(hp) .. "/" .. math.floor(maxHp) .. ") ‚Üí T·ª± reset!")
            StatusLabel.Text = "üíÄ M·∫•t " .. lost .. " HP! ƒêang reset..."
            StatusLabel.TextColor3 = Color3.fromRGB(255, 80, 80)
            humanoid.Health = 0 -- T·ª± kill ƒë·ªÉ respawn
        end
    end)

    -- Khi ch·∫øt
    humanoid.Died:Connect(function()
        print("üíÄ Nh√¢n v·∫≠t ƒë√£ ch·∫øt, s·∫Ω ch·ªçn l·∫°i t∆∞·ªõng khi respawn")
    end)
end

-- =============================================
-- THEO D√ïI RESPAWN
-- =============================================
local function SetupCharacterMonitoring()
    -- X·ª≠ l√Ω character hi·ªán t·∫°i n·∫øu ƒë√£ t·ªìn t·∫°i
    if LocalPlayer.Character then
        SetupHealthMonitor(LocalPlayer.Character)
    end

    LocalPlayer.CharacterAdded:Connect(function(character)
        task.wait(0.5) -- ƒê·ª£i character load s∆° b·ªô
        SetupHealthMonitor(character)
        task.spawn(function()
            HandleRespawn(character)
        end)
    end)
end

-- =============================================
-- HI·ªÜU ·ª®NG N√öT TOGGLE
-- =============================================
local function AddButtonAnimation()
    ToggleBtn.MouseEnter:Connect(function()
        ToggleBtn:TweenSize(UDim2.new(0, 75, 0, 75), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        ToggleStroke.Thickness = 5
    end)
    ToggleBtn.MouseLeave:Connect(function()
        ToggleBtn:TweenSize(UDim2.new(0, 70, 0, 70), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        ToggleStroke.Thickness = 4
    end)
end

