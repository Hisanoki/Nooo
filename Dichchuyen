AntiAFKBtn.MouseButton1Click:Connect(function()
    isAntiAFK = not isAntiAFK
    if isAntiAFK then
        AntiAFKBtn.Text = "üõ°Ô∏è Anti-AFK: B·∫¨T"
        AntiAFKBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
        AntiAFKLabel.Text = "üõ°Ô∏è Anti-AFK: B·∫¨T"
        AntiAFKLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        AntiAFKBtn.Text = "üõ°Ô∏è Anti-AFK: T·∫ÆT"
        AntiAFKBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
        AntiAFKLabel.Text = "üõ°Ô∏è Anti-AFK: T·∫ÆT"
        AntiAFKLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end)

-- AUTO TELEPORT
TeleBtn.MouseButton1Click:Connect(function()
    if not selectedTarget then
        StatusLabel.Text = "‚ö†Ô∏è Ch∆∞a ch·ªçn m·ª•c ti√™u!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isAutoTeleport = not isAutoTeleport

    if isAutoTeleport then
        TeleBtn.Text = "üåÄ Auto Tele: B·∫¨T"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)

        -- Ki·ªÉm tra backpack tr∆∞·ªõc khi tele
        if not IsCharacterInBackpack() then
            StatusLabel.Text = "‚ö†Ô∏è Ch∆∞a c√≥ t∆∞·ªõng trong Backpack!"
            StatusLabel.TextColor3 = Color3.fromRGB(255, 150, 50)
            -- T·ª± ƒë·ªông ch·ªçn n·∫øu ch∆∞a c√≥
            if not hasSelectedCharacter then
                SelectCharacter()
                task.wait(1)
            end
        end

        TeleportToTarget() -- Tele ngay l·∫≠p t·ª©c
    else
        TeleBtn.Text = "üåÄ Auto Tele"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(30, 100, 180)
    end

    UpdateStatusLabel()
end)

-- AUTO ATTACK
AutoAttackBtn.MouseButton1Click:Connect(function()
    if not selectedTarget then
        StatusLabel.Text = "‚ö†Ô∏è Ch∆∞a ch·ªçn m·ª•c ti√™u!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isAutoAttack = not isAutoAttack

    if isAutoAttack then
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: B·∫¨T"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)

        -- Ki·ªÉm tra backpack
        if not IsCharacterInBackpack() then
            StatusLabel.Text = "üîÑ ƒêang ch·ªçn t∆∞·ªõng..."
            StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
            SelectCharacter()
            task.wait(1)
        else
            hasSelectedCharacter = true
        end
    else
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: T·∫ÆT"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 75)
    end

    UpdateStatusLabel()
end)

-- AUTO RESET KHI M·∫§T 80 M√ÅU
AutoResetBtn.MouseButton1Click:Connect(function()
    isAutoReset = not isAutoReset

    if isAutoReset then
        AutoResetBtn.Text = "üíÄ Auto Reset (‚â§" .. CONFIG.AutoResetHP .. " HP): B·∫¨T"
        AutoResetBtn.BackgroundColor3 = Color3.fromRGB(180, 50, 220)
        print("‚úÖ Auto Reset B·∫¨T - S·∫Ω reset khi HP ‚â§ " .. CONFIG.AutoResetHP)
    else
        AutoResetBtn.Text = "üíÄ Auto Reset (‚â§" .. CONFIG.AutoResetHP .. " HP): T·∫ÆT"
        AutoResetBtn.BackgroundColor3 = Color3.fromRGB(100, 50, 150)
        print("‚ùå Auto Reset T·∫ÆT")
    end

    UpdateStatusLabel()
end)

-- =============================================
-- V√íNG L·∫∂P AUTO ATTACK
-- =============================================
task.spawn(function()
    while true do
        if isAutoAttack and selectedTarget then
            if selectedTarget.Character
                and selectedTarget.Character:FindFirstChild("Humanoid")
                and selectedTarget.Character.Humanoid.Health > 0
            then
                AttackTarget()
            else
                StatusLabel.Text = "üíÄ M·ª•c ti√™u ƒë√£ ch·∫øt!"
                StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
            end
        end
        task.wait(CONFIG.AttackDelay)
    end
end)

-- =============================================
-- V√íNG L·∫∂P AUTO TELEPORT
-- =============================================
task.spawn(function()
    while true do
        if isAutoTeleport and selectedTarget then
            if selectedTarget.Character
                and selectedTarget.Character:FindFirstChild("Humanoid")
                and selectedTarget.Character.Humanoid.Health > 0
            then
                if tick() - lastTeleportTime >= CONFIG.TeleportInterval then
                    TeleportToTarget()
                end
            end
        end
        task.wait(0.5)
    end
end)

-- =============================================
-- KH·ªûI T·∫†O
-- =============================================
AddButtonAnimation()
SetupCharacterMonitoring()
CreatePlayerList()

Players.PlayerAdded:Connect(function()
    task.wait(1)
    CreatePlayerList()
end)

Players.PlayerRemoving:Connect(function(player)
    if selectedTarget == player then
        selectedTarget = nil
        isAutoAttack = false
        isAutoTeleport = false
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: T·∫ÆT"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 75)
        TeleBtn.Text = "üåÄ Auto Tele"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(30, 100, 180)
        StatusLabel.Text = "‚ö†Ô∏è M·ª•c ti√™u ƒë√£ tho√°t!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
    CreatePlayerList()
end)
