local function SelectCharacter()
    local success = pcall(function()
        local args = {
            "Select",
            CONFIG.CharacterName,
            LocalPlayer.PlayerGui:WaitForChild("Menu")
        }
        LocalPlayer.PlayerGui:WaitForChild("Menu"):WaitForChild("Frame"):WaitForChild("LocalScript"):WaitForChild("RemoteEvent"):FireServer(unpack(args))
    end)

    if success then
        hasSelectedCharacter = true
        print("‚úÖ ƒê√£ ch·ªçn t∆∞·ªõng: " .. CONFIG.CharacterName)
        StatusLabel.Text = "‚úÖ ƒê√£ ch·ªçn t∆∞·ªõng!"
        StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        task.wait(1)
    else
        print("‚ùå L·ªói khi ch·ªçn t∆∞·ªõng!")
    end
end

local function GetCharacterRemote()
    local tool = LocalPlayer.Backpack:FindFirstChild(CONFIG.CharacterName)
        or (LocalPlayer.Character and LocalPlayer.Character:FindFirstChild(CONFIG.CharacterName))
    if tool then
        return tool:FindFirstChild("Remote")
    end
    return nil
end

local playerButtons = {}

local function CreatePlayerList()
    for _, btn in ipairs(playerButtons) do
        btn:Destroy()
    end
    playerButtons = {}

    local totalHeight = 5

    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local button = Instance.new("TextButton")
            button.Parent = ScrollFrame
            button.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
            button.Size = UDim2.new(1, -10, 0, 35)
            button.Font = Enum.Font.GothamBold
            button.Text = "üë§ " .. player.Name
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
            button.TextSize = 14
            button.TextXAlignment = Enum.TextXAlignment.Left
            button.TextTruncate = Enum.TextTruncate.AtEnd

            local padding = Instance.new("UIPadding")
            padding.PaddingLeft = UDim.new(0, 10)
            padding.Parent = button

            local corner = Instance.new("UICorner")
            corner.CornerRadius = UDim.new(0, 8)
            corner.Parent = button

            button.MouseButton1Click:Connect(function()
                selectedTarget = player

                for _, btn in ipairs(playerButtons) do
                    btn.BackgroundColor3 = Color3.fromRGB(50, 50, 55)
                    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
                end

                button.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
                button.TextColor3 = Color3.fromRGB(255, 255, 255)

                StatusLabel.Text = "üéØ M·ª•c ti√™u: " .. player.Name
                StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
            end)

            table.insert(playerButtons, button)
            totalHeight = totalHeight + 40
        end
    end

    ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, totalHeight)
end

local function TeleportToTarget()
    if not selectedTarget or not selectedTarget.Character then return end
    local targetRoot = selectedTarget.Character:FindFirstChild("HumanoidRootPart")
    local myChar = LocalPlayer.Character
    local myRoot = myChar and myChar:FindFirstChild("HumanoidRootPart")
    if targetRoot and myRoot then
        myRoot.CFrame = targetRoot.CFrame * CFrame.new(0, 3, -5)
        lastTeleportTime = tick()
    end
end

local function AttackTarget()
    local remote = GetCharacterRemote()
    if remote then
        remote:FireServer("Attack")
    end
end

local function UpdateStatusLabel()
    local parts = {}
    if isAutoTeleport then table.insert(parts, "üåÄ Tele") end
    if isAutoAttack then table.insert(parts, "‚öîÔ∏è Attack") end

    if #parts == 0 then
        StatusLabel.Text = "‚ö° Tr·∫°ng th√°i: Ch·ªù..."
        StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
    else
        local target = selectedTarget and selectedTarget.Name or "???"
        StatusLabel.Text = table.concat(parts, " + ") .. " ‚Üí " .. target
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end

-- --- THEO D√ïI RESPAWN ---
local function SetupCharacterMonitoring()
    LocalPlayer.CharacterAdded:Connect(function(character)
        task.wait(0.5)

        if (isAutoAttack or isAutoTeleport) and not hasSelectedCharacter then
            StatusLabel.Text = "üîÑ ƒêang ch·ªçn t∆∞·ªõng..."
            StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
            task.wait(1)
            SelectCharacter()
            task.wait(1.5)
            UpdateStatusLabel()
        end

        local humanoid = character:WaitForChild("Humanoid")
        lastHealth = humanoid.Health

        humanoid.Died:Connect(function()
            hasSelectedCharacter = false
            print("üíÄ Nh√¢n v·∫≠t ƒë√£ ch·∫øt, s·∫Ω ch·ªçn l·∫°i t∆∞·ªõng khi respawn")
        end)
    end)
end

-- =============================================
-- HI·ªÜU ·ª®NG N√öT TOGGLE
-- =============================================
local function AddButtonAnimation()
    ToggleBtn.MouseEnter:Connect(function()
        ToggleBtn:TweenSize(UDim2.new(0, 75, 0, 75), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        ToggleStroke.Thickness = 5
    end)
    ToggleBtn.MouseLeave:Connect(function()
        ToggleBtn:TweenSize(UDim2.new(0, 70, 0, 70), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.2, true)
        ToggleStroke.Thickness = 4
    end)
end

-- =============================================
-- S·ª∞ KI·ªÜN N√öT B·∫§M
-- =============================================
ToggleBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = not MainFrame.Visible
    ToggleBtn:TweenSize(UDim2.new(0, 65, 0, 65), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
    task.wait(0.1)
    ToggleBtn:TweenSize(UDim2.new(0, 70, 0, 70), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true)
end)

CloseBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
end)

RefreshBtn.MouseButton1Click:Connect(function()
    CreatePlayerList()
    StatusLabel.Text = "‚úÖ ƒê√£ l√†m m·ªõi danh s√°ch!"
    StatusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    task.wait(2)
    UpdateStatusLabel()
end)

AntiAFKBtn.MouseButton1Click:Connect(function()
    isAntiAFK = not isAntiAFK
    if isAntiAFK then
        AntiAFKBtn.Text = "üõ°Ô∏è Anti-AFK: B·∫¨T"
        AntiAFKBtn.BackgroundColor3 = Color3.fromRGB(50, 150, 50)
        AntiAFKLabel.Text = "üõ°Ô∏è Anti-AFK: B·∫¨T"
        AntiAFKLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        AntiAFKBtn.Text = "üõ°Ô∏è Anti-AFK: T·∫ÆT"
        AntiAFKBtn.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
        AntiAFKLabel.Text = "üõ°Ô∏è Anti-AFK: T·∫ÆT"
        AntiAFKLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end)

-- =============================================
-- N√öT AUTO TELEPORT (T√ÅCH RI√äNG)
-- =============================================
TeleBtn.MouseButton1Click:Connect(function()
    if not selectedTarget then
        StatusLabel.Text = "‚ö†Ô∏è Ch∆∞a ch·ªçn m·ª•c ti√™u!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isAutoTeleport = not isAutoTeleport

    if isAutoTeleport then
        TeleBtn.Text = "üåÄ Auto Tele: B·∫¨T"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(0, 150, 255)
        TeleportToTarget() -- Teleport ngay l·∫≠p t·ª©c
    else
        TeleBtn.Text = "üåÄ Auto Tele"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(30, 100, 180)
    end

    UpdateStatusLabel()
end)

-- =============================================
-- N√öT AUTO ATTACK (T√ÅCH RI√äNG)
-- =============================================
AutoAttackBtn.MouseButton1Click:Connect(function()
    if not selectedTarget then
        StatusLabel.Text = "‚ö†Ô∏è Ch∆∞a ch·ªçn m·ª•c ti√™u!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isAutoAttack = not isAutoAttack

    if isAutoAttack then
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: B·∫¨T"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(255, 50, 50)

        -- Ch·ªçn t∆∞·ªõng n·∫øu ch∆∞a ch·ªçn
        if not hasSelectedCharacter then
            StatusLabel.Text = "üîÑ ƒêang ch·ªçn t∆∞·ªõng..."
            StatusLabel.TextColor3 = Color3.fromRGB(255, 255, 100)
            SelectCharacter()
            task.wait(1)
        end
    else
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: T·∫ÆT"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 75)
    end

    UpdateStatusLabel()
end)

-- =============================================
-- V√íNG L·∫∂P CH√çNH
-- =============================================
task.spawn(function()
    while true do
        -- AUTO ATTACK
        if isAutoAttack and selectedTarget then
            if selectedTarget.Character
                and selectedTarget.Character:FindFirstChild("Humanoid")
                and selectedTarget.Character.Humanoid.Health > 0
            then
                AttackTarget()
            else
                StatusLabel.Text = "üíÄ M·ª•c ti√™u ƒë√£ ch·∫øt!"
                StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
            end
        end
        task.wait(CONFIG.AttackDelay)
    end
end)

task.spawn(function()
    while true do
        -- AUTO TELEPORT (d√πng interval ri√™ng)
        if isAutoTeleport and selectedTarget then
            if selectedTarget.Character
                and selectedTarget.Character:FindFirstChild("Humanoid")
                and selectedTarget.Character.Humanoid.Health > 0
            then
                if tick() - lastTeleportTime >= CONFIG.TeleportInterval then
                    TeleportToTarget()
                end
            end
        end
        task.wait(0.5)
    end
end)

-- =============================================
-- KH·ªûI T·∫†O
-- =============================================
AddButtonAnimation()
SetupCharacterMonitoring()
CreatePlayerList()

Players.PlayerAdded:Connect(function()
    task.wait(1)
    CreatePlayerList()
end)

Players.PlayerRemoving:Connect(function(player)
    if selectedTarget == player then
        selectedTarget = nil
        isAutoAttack = false
        isAutoTeleport = false
        AutoAttackBtn.Text = "‚öîÔ∏è Auto Attack: T·∫ÆT"
        AutoAttackBtn.BackgroundColor3 = Color3.fromRGB(70, 70, 75)
        TeleBtn.Text = "üåÄ Auto Tele"
        TeleBtn.BackgroundColor3 = Color3.fromRGB(30, 100, 180)
        StatusLabel.Text = "‚ö†Ô∏è M·ª•c ti√™u ƒë√£ tho√°t!"
        StatusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
    CreatePlayerList()
end)
